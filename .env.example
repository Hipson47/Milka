###############################################
#  NanoBanana (Google Gemini API) Configuration
###############################################
# Get your API key here: https://aistudio.google.com/apikey
# Model docs: https://ai.google.dev/gemini-api/docs/models
# Copy this file to `.env` and replace YOUR_API_KEY_HERE.
# DO NOT commit your real API key to git.
# Copy this file to `.env` and replace the placeholder below.

NANOBANANA_KEY=YOUR_API_KEY_HERE

# Exact model name used for image editing:
NANOBANANA_MODEL=gemini-2.5-flash-image-preview
# ====================
# Application Configuration
# ====================
# Request timeout in seconds for API calls
REQUEST_TIMEOUT=120

# Application environment (development, staging, production)
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ====================
# Security & Rate Limiting
# ====================
# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Requests per minute per IP
RATE_LIMIT_RPM=60

# Burst capacity for rate limiting
RATE_LIMIT_BURST=20

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ====================
# Image Processing Limits
# ====================
# Maximum file size in MB
MAX_IMAGE_SIZE_MB=10

# Maximum image dimension in pixels
MAX_IMAGE_DIMENSION=2048

# Minimum image dimension in pixels
MIN_IMAGE_DIMENSION=256

# Enable strict validation (true/false)
STRICT_VALIDATION=true

# ====================
# Observability (Optional)
# ====================
# OpenTelemetry OTLP endpoint for distributed tracing
# Leave empty to disable tracing
OTEL_EXPORTER_OTLP_ENDPOINT=

# OTLP headers for authentication (optional)
# Format: key1=value1,key2=value2
OTEL_EXPORTER_OTLP_HEADERS=

# Service name for tracing
OTEL_SERVICE_NAME=nanobanana-inpaint-backend
